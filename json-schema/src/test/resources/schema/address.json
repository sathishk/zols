{
    "$id": "address",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "An Address following the convention of http://microformats.org/wiki/hcard",
    "type": "object",
    "properties": {
        "post-office-box": {
            "type": "string"
        },
        "extended-address": {
            "type": "string"
        }
    },
    "required": [
        "post-office-box"
    ],
    "localized": ["extended-address"]
}