{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "address",
    "description": "An Address following the convention of http://microformats.org/wiki/hcard",
    "type": "object",
    "properties": {
        "city": {
            "type": "string"
        },
        "state": {
            "type": "string"
        },
        "postel-code": {
            "type": "integer"
        }
    },
    "required": [
        "postel-code"
    ],
    "localized": ["city"]
}