{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "person",
    "description": "An Address following the convention of http://microformats.org/wiki/hcard",
    "title": "Person",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string"
        },
        "lastName": {
            "type": "string"
        },
        "age": {
            "description": "Age in years",
            "type": "integer",
            "minimum": 0
        },
        "home-address": {
            "$ref": "address"
        },
        "other-addresses": {
            "type": "array",
            "items": { 
                "$ref": "address"
            }
        }
    },
    "required": ["firstName", "lastName", "home-address"],
    "localized": ["firstName"]
}